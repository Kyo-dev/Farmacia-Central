<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Historial de conductas</h1>
        {{#if month}}
        <p class="lead text-center">Lista de conductas por fecha {{year}}/{{month}}</p>
        {{else}}
        <p class="lead text-center">Lista de conductas por fecha </p>
        {{/if}}
        <form action="/conduct/listRegisters" method="POST">
            <div class="form-group">
                <label for="">Seleccione una fecha</label>
                <input type="date" class="form-control" max="{{date.fecha}}" value="{{date.fecha}}" name="fecha"
                    placeholder="fecha">
            </div>
            <div class="form-group">
                <button class="btn btn-principal btn-block">Consultar</button>
            </div>
        </form>
    </div>
    <div class="row">
        {{#each dataConducts}}
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-head jumbo p-4">
                    <h3 class="card-title text-center">
                        <span>{{fecha}}</span></p>
                    </h3>
                </div>
                <div class="card-body">
                    <p>Nombre del empleado: <br>{{nombre}} {{p_apellido}} {{s_apellido}}</p>
                    <p>Número de cédula: <span>{{cedula}}</span></p>
                    <p>Motivo: <span>{{descripcion}}</span></p>
                    <p>El trabajador tiene acceso a la informacíon</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/conduct/admEditRegister/{{id}}" title="Editar" class="btn btn-principal"><i
                                class="material-icons">
                                edit
                            </i></a>
                        <a href="/conduct/admDownload/{{id}}" title="Descargar PDF" class="btn btn-secondary"><i
                                class="material-icons">
                                get_app
                            </i></a>
                        <a href="/conduct/admDeleteRegister/{{id}}" title="Borrar" class="btn btn-danger"><i
                                class="material-icons">
                                delete_sweep
                            </i></a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No existen registros <i class="material-icons">
                        insert_emoticon
                    </i></p>
            </div>
        </div>
        {{/each}}
    </div>
</div>