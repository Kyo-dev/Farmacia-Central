<div class="container p-4">
    <div class="p-3"></div>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header jumbo">
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logo.jpg" class="card-img-top mx-auto m-2 rounded-circle w-50" alt="">
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="email" name="correo"  maxlength="150" class="form-control" placeholder="correo"
                                class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="clave"  maxlength="50" class="form-control" placeholder="contraseña"
                                class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-principal btn-block">Ingresar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>