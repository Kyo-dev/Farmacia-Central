<div class="container p-4">
    <h1>Información salarial</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Cedula</th>
                    <th>Nombre</th>
                    <th>Primer apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Cargo que desempeña</th>
                    <th>Fecha</th>
                    <th>Aprobar</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{cedula}}</td>
                    <td>{{nombre}}</td>
                    <td>{{p_apellido}}</td>
                    <td>{{s_apellido}}</td>
                    <td>{{nombre_cargo}}</td>
                    <td>{{fecha}}</td>
                    <td><a href="/adm/salari/o-aumento/{{id}}" class="btn btn-info btn-block">Revisar</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>