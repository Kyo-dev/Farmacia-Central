<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Consulta de pagos</h1>
        <hr class="my-1">
        <p class="text-center">Este pago aplica al año {{year}} y el mes {{month}}</p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Cédula</th>
                            <th>Nombre</th>
                            <th>Primer apellido</th>
                            <th>Segundo Apellido</th>
                            <th>Año</th>
                            <th>Mes</th>
                            <th>Horas descontadas <br>por permisos</th>
                            <th>Bonos</th>
                            <th>Número de horas extra</th>
                            <th>Salario por hora</th>
                            <th>Cantidad de días<br>trabajados</th>
                            <th>Jornada díaria</th>
                            <th>Prestaciones CCSS</th>
                            <th>Retenciones</th>
                            <th>Salario bruto</th>
                            <th>Salario neto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <td>{{dataUser.cedula}}</td>
                        <td>{{dataUser.nombre}}</td>
                        <td>{{dataUser.p_apellido}}</td>
                        <td>{{dataUser.s_apellido}}</td>
                        <td class="text-right">{{year}}</td>
                        <td class="text-right">{{month}}</td>
                        <td class="text-center">{{permits}}</td>
                        <td class="text-right">₡{{bonus}}</td>
                        <td class="text-center">{{overTime}}</td>
                        <td class="text-right">₡{{salaryHour}}</td>
                        <td class="text-center">{{dayWorks}}</td>
                        <td class="text-center">{{workingDay}}</td>
                        <td class="text-right">₡{{ccss}}</td>
                        <td class="text-right">₡{{tax}}</td>
                        <td class="text-right">₡{{baseSalary}}</td>
                        <td class="text-right">₡{{salary}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>