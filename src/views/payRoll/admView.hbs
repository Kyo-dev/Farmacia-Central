<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Consulta de pagos</h1>
        <hr class="my-1">
        <p class="text-center">Este pago aplica al año {{year}} y el mes {{month}}</p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Cédula</th>
                            <th>Nombre</th>
                            <th>Primer apellido</th>
                            <th>Segundo Apellido</th>
                            <th>Año</th>
                            <th>Mes</th>
                            <th>Horas descontadas <br>por permisos</th>
                            <th>Bonos</th>
                            <th>Cantidad <br> de horas extra</th>
                            <th>Salario por hora</th>
                            <th>Jornada díaria</th>
                            <th>Retenciones</th>
                            <th>Salario bruto</th>
                            <th>Salario neto</th>
                            <th>Aguinaldo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <td>{{employee.cedula}}</td>
                        <td>{{employee.nombre}}</td>
                        <td>{{employee.p_apellido}}</td>
                        <td>{{employee.s_apellido}}</td>
                        <td class="text-right">{{year}}</td>
                        <td class="text-right">{{month}}</td>
                        <td class="text-center">{{permits.aux}}</td>
                        <td class="text-right">₡{{bonus.aux}}</td>
                        <td class="text-center">{{overTime.aux}}</td>
                        <td class="text-right">₡{{salary.salario_hora}}</td>
                        <td class="text-center">{{salary.jornada}} horas</td>
                        <td class="text-right">₡{{tax.aux}}</td>
                        <td class="text-right">₡{{salaryB.bruto}}</td>
                        <td class="text-right">₡{{salaryP.pago}}</td>
                        <td class="text-right">₡{{salaryA.aguinaldo}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>