<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Bonos</h1>
        <hr class="my-1">
        <p class="text-center"><a class="btn btn-principal" href="bonus/listRegisters">Historial de bonos</a></p>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <h4 class="jumbo text-center p-3">Otorgar bono</h4>
                            <tr>
                                <th>Cédula</th>
                                <th>Nombre</th>
                                <th>Primer apellido</th>
                                <th>Segundo apellido</th>
                                <th>Fecha contratación</th>
                                <th>Cargo </th>
                                <th>Realizar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dataUsuarios}}
                            <tr>
                                <td>{{cedula}}</td>
                                <td>{{nombre}}</td>
                                <td>{{p_apellido}}</td>
                                <td>{{s_apellido}}</td>
                                <td>{{fecha_contrato}}</td>
                                <td>{{nombre_cargo}}</td>
                                <td><a href="/bonus/admRegister/{{id}}" class="btn btn-block btn-principal"><i
                                            class="material-icons">
                                            search
                                        </i></a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>