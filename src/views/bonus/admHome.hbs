<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Bonos</h1>
        <hr class="my-1">
        <p class="lead text-center">Información sobre bonos otorgados</p>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <h4 class="jumbo text-center p-3">Otorgar bono</h4>
                            <tr>
                                <th>Cedula</th>
                                <th>Nombre</th>
                                <th>Primer apellido</th>
                                <th>Segundo apellido</th>
                                <th>Fecha contratación</th>
                                <th>Cargo </th>
                                <th>Otorgar un insentivo laboral</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dataUsuarios}}
                            <tr>
                                <td>{{cedula}}</td>
                                <td>{{nombre}}</td>
                                <td>{{p_apellido}}</td>
                                <td>{{s_apellido}}</td>
                                <td>{{fecha_contrato}}</td>
                                <td>{{nombre_cargo}}</td>
                                <td><a href="/bonus/admRegister/{{id}}" class="btn btn-principal">Revisar</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <h4 class="btn-principal text-center p-3">Bonos otorgados</h4>
                            <tr>
                                <th>Cedula</th>
                                <th>Nombre</th>
                                <th>Primer apellido</th>
                                <th>Segundo apellido</th>
                                <th>Fecha de realización</th>
                                <th>Motivo</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dataBonos}}
                            <tr>
                                <td>{{cedula}}</td>
                                <td>{{nombre}}</td>
                                <td>{{p_apellido}}</td>
                                <td>{{s_apellido}}</td>
                                <td>{{fecha_bono}}</td>
                                <td>{{motivo}}</td>
                                <td>{{cantidad}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>