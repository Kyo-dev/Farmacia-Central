<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Historial</h1>
        {{#if month}}
        <p class="lead text-center">Lista de bonos por fecha {{year}}/{{month}}</p>
        {{else}}
        <p class="lead text-center">Lista de bonos por fecha </p>
        {{/if}}
        <form action="/bonus/listRegisters" method="POST">
            <div class="form-group">
                <label for="">Seleccione una fecha</label>
                <input type="date" class="form-control" max="{{date.fecha}}" value="{{date.fecha}}" name="fecha"
                    placeholder="fecha">
            </div>
            <div class="form-group">
                <button class="btn btn-principal btn-block">Consultar</button>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-title jumbo p-2">
                    <h4 class="text-center text-uppercase">Bonos realizados durante la el mes</h4>
                     {{#if dataBonos}}
                     <p class="text-center"><a class ="btn btn-principal btn-central" href="/bonus/pdf/{{year}}/{{month}}"generar pdf>Generar pdf</a></p>
                     {{/if}}
                </div>
                <div class="card-body">
                    {{#if dataBonos}}
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Cedula</th>
                                    <th>Nombre</th>
                                    <th>Primer apellido</th>
                                    <th>Segundo apellido</th>
                                    <th>Fecha de realizaci√≥n</th>
                                    <th>Motivo</th>
                                    <th>Cantidad</th>
                                    <th>Descargar</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each dataBonos}}
                                <tr>
                                    <td>{{cedula}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{p_apellido}}</td>
                                    <td>{{s_apellido}}</td>
                                    <td>{{fecha_bono}}</td>
                                    <td>{{motivo}}</td>
                                    <td>{{cantidad}}</td>
                                    <td><a href="/bonus/admDownload/{{id}}" class="btn btn-block btn-principal" title="Descargar"><i
                                                class="material-icons">
                                                get_app
                                            </i></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <p class=" text-center"> No hay registros</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

