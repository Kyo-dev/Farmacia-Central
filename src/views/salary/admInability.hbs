<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center"> Incapacidades </h1>
        <hr class="my-1">
    </div>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card-body">
                <div class="form-group">
                    <h4>Información adicional</h4> <br>
                    <h4>Nombre del trabajador:</h4>
                    <P>{{dataUser.nombre}} {{dataUser.p_apellido}} {{dataUser.s_apellido}}</P>
                    <h4>Cargo que desempeña:</h4>
                    <p>{{dataRole.nombre_cargo}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Registrar incapacidad</h3>
            <form action="/salary/admInability/{{dataUser.id}}" method="POST">
                <div class="form-group">
                    <label for="">Registrar fecha de salida</label> <br>
                    <input type="date" class="form-control" value="{{dataDate.fecha}}" name="fecha_salida"
                        placeholder="Fecha de salida" required>
                </div>
                <div class="form-group">
                    <label for="">Registrar fecha de reingreso</label> <br>
                    <input type="date" class="form-control" value="{{dataDate.fecha}}" min="{{dataDate.fecha}}"
                        name="fecha_entrada" placeholder="Fecha de entrada" required>
                </div>
                <div class="form-group">
                    <label for="">Motivo de la incapacidad</label> <br>
                    <input type="text" class="form-control" name="motivo" maxlength="200" placeholder="Descripción" required>
                </div>
                <div class="form-group">
                    {{!-- CONFIRMAR --}}
                    <button type="button" class="btn btn-principal btn-block" data-toggle="modal"
                        data-target="#confirmarRetencion">
                        Aceptar
                    </button>
                    <div class="modal fade" id="confirmarRetencion" tabindex="-1" role="dialog"
                        aria-labelledby="confirmarRetencion" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title text-danger" id="exampleModalLongTitle">
                                         <i class="material-icons">
                                            warning
                                        </i> Importante
                                        </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Estás a punto de <span class="text-danger"><b>registrar</b></span>
                                    una incapacidad para el trabajador {{dataUser.nombre}} {{dataUser.p_apellido}}
                                    {{dataUser.s_apellido}}. <br>
                                    ¿Desea continuar?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" title="Cancelar"
                                        data-dismiss="modal"><i class="material-icons">
                                            clear
                                        </i></button>
                                    <button type="submit" class="btn btn-principal"
                                        title="Crear reteción y subir archivo"><i class="material-icons">
                                            check
                                        </i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- CONFIRMAR --}}
                </div>
            </form>
        </div>
    </div>

    {{!-- RETENCION --}}
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Fecha de salida</th>
                            <th>Fecha de ingreso</th>
                            <th>Motivo</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dataInability}}
                        <tr>
                            <td>{{fecha_salida}}</td>
                            <td>{{fecha_entrada}}</td>
                            <td>{{motivo}}</td>
                            <td> <a class="btn btn-danger btn-block" href="/salary/admDeleteInability/{{id}}"><i
                                        class="material-icons">
                                        clear
                                    </i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>