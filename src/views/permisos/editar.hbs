<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/permisos/editar/{{data.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{data.titulo}}" class="form-control" name="titulo" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{data.descripcion}}" class="form-control" name="descripcion" placeholder="descripcion">
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" name="fecha_salida" placeholder="descripcion">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>