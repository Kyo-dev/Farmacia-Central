<div class="container p-4">
    <div class="row">
        {{#each data}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase text-info">
                        {{titulo}}
                    </h3>
                    <p class="m-4">{{descripcion}}</p>
                    <p>{{timesago fecha}}</p>
                    <a href="/permisos/editar/{{id}}" class="btn btn-info">Editar</a>
                    <a href="/permisos/borrar/{{id}}" class="btn btn-danger">Borrar</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No existen permisos</p>
                    <a href="/permisos/nuevo">Â¿Necesitas un permiso?</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>