<div class="container p-4">
    <div class="row">
        <a href="/permits/userNewRegister">¿Necesitas un permiso?</a>
        {{#each data}}
        <div class="col-md-3">
            <div class="card ">
                <div class="card-body">
                    <h3 class="card-title text-center text-uppercase text-info">
                        {{titulo}}
                    </h3>
                    <p>Motivo: <span>{{descripcion}}</span></p>
                    <P>{{informacion_estado}}</P>
                    <p>Fecha de salida: <span>{{fecha}}</span></p>
                    <p>Permiso: {{estado_permiso}}</p>
                    <p>Permiso solicitado: {{timesago fecha_solicitud}}</p>
                    <a href="/permits/userEdit/{{id}}" class="btn btn-info">Editar</a>
                    <a href="/permits/userDelete/{{id}}" class="btn btn-danger">Borrar</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No existen permisos</p>
                    <a href="/permits/userNewRegister">¿Necesitas un permiso?</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>