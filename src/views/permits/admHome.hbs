<div class="container p-4">
    <div class="jumbotron jumbo">
        <h1 class="display-4 text-center">Solicitudes de permisos</h1>
        <hr class="my-1">
        <p class="text-center"><a class="btn btn-principal" href="permits/listRegisters">Historial de permisos</a></p>
    </div>
    {{#if data}}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>CÃ©dula</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Fecha del permiso</th>
                    <th>Estado</th>
                    <th>Fecha de solicitud</th>
                    <th>Motivo</th>
                    <th>Cantidad de horas</th>
                    <th>Revisar</th>
                    {{!-- <th>Eliminar</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{cedula}}</td>
                    <td>{{nombre}}</td>
                    <td>{{p_apellido}}</td>
                    <td>{{fecha_salida}}</td>
                    <td>{{informacion_estado}}</td>
                    <td>{{fecha_solicitud}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{horas}}</td>
                    <td><a href="/permits/admCheck/{{id}}" class="btn btn-block btn-principal"><i class="material-icons">
                                            search
                                        </i></a></td>
                    {{!-- <td><a href="/permits/admDelete/{{id}}" class="btn btn-block btn-secondary btn-block"><i class="material-icons">
                                clear
                            </i></a></td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No existen registros <i class="material-icons">
                        insert_emoticon
                    </i></p>
            </div>
        </div>
    {{/if}}
    
</div>