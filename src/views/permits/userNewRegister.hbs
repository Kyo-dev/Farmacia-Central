<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-title jumbo p-4">
                     <h4 class="text-center text-uppercase">Nuevo permiso</h4>
                </div>
                <div class="card-body">
                    <form action="/permits/userNewRegister" method="POST">
                        <div class="form-group">
                            <label for="">Motivo del permiso</label>
                            <input type="text" class="form-control" name="titulo" maxlength="100" placeholder="Titulo" autofocus required>
                        </div>
                        <div class="form-group">
                            <label for="">Información adicional</label>
                            <input type="text" class="form-control" name="descripcion" maxlength="100" placeholder="descripcion" required>
                        </div>
                        <div class="form-group">
                            <label for="">¿Cúanta horas requiere el permiso?</label>
                            <input type="number" class="form-control" name="horas" placeholder="horas" required>
                        </div>
                        <div class="form-group">
                            <label for="">¿A qué hora se retira?</label>
                            <input type="text" class="form-control" name="hora_salida" placeholder="am/pm" required>
                        </div>
                        <div class="form-group">
                            <label for="">Fecha del permiso</label>
                            <input type="date" class="form-control" min="{{date.fecha}}" value="{{date.fecha}}" name="fecha_salida" placeholder="fecha del permiso" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-principal btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>